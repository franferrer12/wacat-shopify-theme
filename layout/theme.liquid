<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#121212">

  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif -%}
    {%- if current_page != 1 %} &ndash; PÃ¡gina {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {{ content_for_header }}

  <!-- Google Fonts: Assistant (EXACTO B3TTER FOODS) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Line Awesome Icons (EXACTO B3TTER) -->
  <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

  <!-- SOLO B3TTER FOODS EXACT STYLE -->
  {{ 'b3tter-style.css' | asset_url | stylesheet_tag }}

  <!-- Libraries (load synchronously) -->
  <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.2/lib/anime.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Theme scripts (load after libraries) -->
  <script src="{{ 'animations.js' | asset_url }}" defer></script>
</head>

<body>
  <a class="skip-to-content-link sr-only" href="#MainContent">
    Ir al contenido
  </a>

  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  <script>
    window.shopUrl = '{{ shop.url }}';
    window.routes = {
      cart_add_url: '{{ routes.cart_add_url }}',
      cart_change_url: '{{ routes.cart_change_url }}',
      cart_update_url: '{{ routes.cart_update_url }}'
    };
  </script>
</body>
</html>
