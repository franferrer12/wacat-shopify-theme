{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Preguntas frecuentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Todo lo que necesitas saber"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}

<section id="faq" class="bg-wacat-cream py-20 md:py-32">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <div class="space-y-6">
      {% for block in section.blocks %}
        <details class="group border-b border-wacat-navy/10 py-6">
          <summary class="flex justify-between items-center cursor-pointer text-base font-medium text-wacat-navy">
            {{ block.settings.question }}
            <i class="las la-plus text-xl text-wacat-navy/30 group-open:rotate-45 transition-transform duration-300 flex-shrink-0 ml-4"></i>
          </summary>
          <p class="mt-5 text-sm text-wacat-navy/60 font-light leading-relaxed">
            {{ block.settings.answer }}
          </p>
        </details>
      {% endfor %}
    </div>
  </div>
</section>
