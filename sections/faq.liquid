{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Preguntas frecuentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Todo lo que necesitas saber"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  #section-{{ section.id }} {
    padding: 21px 27px;
    background: #F3F3F3;
    font-family: Assistant, sans-serif;
  }

  #section-{{ section.id }} .container {
    max-width: 90rem;
    margin: 0 auto;
  }

  #section-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  #section-{{ section.id }} .section-title {
    font-size: 30px; /* h1 mobile EXACTO B3TTER */
    font-weight: 400;
    color: #121212;
    margin: 0;
    line-height: 1.2;
    letter-spacing: 0.06rem; /* EXACTO B3TTER */
  }

  #section-{{ section.id }} .faq-list {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  #section-{{ section.id }} .faq-item {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  #section-{{ section.id }} .faq-item:hover {
    box-shadow: 0 2px 8px rgba(18, 18, 18, 0.04);
  }

  #section-{{ section.id }} .faq-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    cursor: pointer;
    list-style: none;
    user-select: none;
  }

  #section-{{ section.id }} .faq-summary::-webkit-details-marker {
    display: none;
  }

  #section-{{ section.id }} .faq-question {
    font-size: 16px;
    font-weight: 400;
    color: #121212;
    margin: 0;
    padding-right: 32px;
    flex: 1;
  }

  #section-{{ section.id }} .faq-icon {
    font-size: 24px;
    color: #7C7C7C;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  #section-{{ section.id }} .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }

  #section-{{ section.id }} .faq-answer-wrapper {
    padding: 0 24px 24px 24px;
  }

  #section-{{ section.id }} .faq-divider {
    height: 1px;
    background: #EDEDED;
    margin-bottom: 16px;
  }

  #section-{{ section.id }} .faq-answer {
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    #section-{{ section.id }} {
      padding: 28px 36px;
    }

    #section-{{ section.id }} .section-header {
      margin-bottom: 64px;
    }

    #section-{{ section.id }} .faq-question {
      font-size: 16px; /* body text EXACTO B3TTER */
    }

    #section-{{ section.id }} .faq-answer {
      font-size: 16px; /* body text EXACTO B3TTER */
    }
  }

  @media (min-width: 1024px) {
    #section-{{ section.id }} {
      padding: 36px 48px;
    }

    #section-{{ section.id }} .section-title {
      font-size: 40px; /* h1 desktop EXACTO B3TTER */
    }
  }
</style>

<section id="section-{{ section.id }}">
  <div class="container">

    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>

    <div class="faq-list">
      {% for block in section.blocks %}
        <details class="faq-item">
          <summary class="faq-summary">
            <span class="faq-question">{{ block.settings.question }}</span>
            <i class="las la-plus faq-icon"></i>
          </summary>
          <div class="faq-answer-wrapper">
            <div class="faq-divider"></div>
            <p class="faq-answer">{{ block.settings.answer }}</p>
          </div>
        </details>
      {% endfor %}
    </div>

  </div>
</section>
