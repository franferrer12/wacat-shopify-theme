{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Preguntas frecuentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Todo lo que necesitas saber"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}

<section id="faq" class="bg-white py-12 md:py-16 lg:py-20">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-wacat-navy mb-2">
        {{ section.settings.title }}
      </h2>
      <p class="text-sm text-wacat-navy/60">
        {{ section.settings.subtitle }}
      </p>
    </div>

    <div class="space-y-4">
      {% for block in section.blocks %}
        <details class="group border-b border-wacat-navy/10 py-5">
          <summary class="flex justify-between items-center cursor-pointer text-base md:text-lg font-semibold text-wacat-navy hover:text-wacat-navy-dark transition-colors">
            {{ block.settings.question }}
            <i class="las la-plus text-xl text-wacat-navy/30 group-open:rotate-45 transition-transform duration-300 flex-shrink-0 ml-4"></i>
          </summary>
          <p class="mt-4 text-sm text-wacat-navy/60 leading-relaxed">
            {{ block.settings.answer }}
          </p>
        </details>
      {% endfor %}
    </div>
  </div>
</section>
