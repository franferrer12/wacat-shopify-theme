{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Preguntas frecuentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Todo lo que necesitas saber"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}

<section id="faq" class="bg-wacat-cream" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="heading-xl text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <div class="space-y-1">
      {% for block in section.blocks %}
        <details class="group bg-white rounded-lg transition-all duration-300 hover:shadow-sm">
          <summary class="flex justify-between items-center cursor-pointer px-6 py-5 list-none">
            <span class="text-base font-medium text-primary pr-8">
              {{ block.settings.question }}
            </span>
            <i class="las la-plus text-2xl text-tertiary group-open:rotate-45 transition-all duration-300 flex-shrink-0"></i>
          </summary>
          <div class="px-6 pb-6 pt-2">
            <div class="divider mb-4"></div>
            <p class="body-sm text-secondary leading-relaxed">
              {{ block.settings.answer }}
            </p>
          </div>
        </details>
      {% endfor %}
    </div>
  </div>
</section>
