{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonios"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Gatos más felices"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "cat_name",
          "label": "Cat Name"
        },
        {
          "type": "text",
          "id": "cat_age",
          "label": "Cat Age"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ]
}
{% endschema %}

<section id="testimonios" class="bg-white section-spacing">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Divider superior -->
    <div class="divider mb-20"></div>

    <div class="text-center mb-24">
      <h2 class="heading-xl text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <!-- Swiper Container -->
    <div class="swiper testimonials-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="text-center max-w-2xl mx-auto">
              <!-- Quote icon -->
              <div class="mb-8">
                <i class="las la-quote-left text-4xl text-wacat-navy/20"></i>
              </div>

              <!-- Quote text -->
              <blockquote class="body-lg text-wacat-navy/80 mb-10">
                {{ block.settings.quote }}
              </blockquote>

              <!-- Author info -->
              <div class="space-y-2">
                <p class="text-base font-medium text-primary">
                  {{ block.settings.author }}
                </p>
                {% if block.settings.cat_name %}
                  <p class="caption text-tertiary">
                    {{ block.settings.cat_name }}{% if block.settings.cat_age %} · {{ block.settings.cat_age }}{% endif %}
                  </p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      <div class="swiper-pagination mt-16"></div>
    </div>

    <!-- Divider inferior -->
    <div class="divider mt-20"></div>
  </div>
</section>
