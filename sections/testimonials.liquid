{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonios"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Gatos más felices"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "cat_name",
          "label": "Cat Name"
        },
        {
          "type": "text",
          "id": "cat_age",
          "label": "Cat Age"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ]
}
{% endschema %}

<section id="testimonios" class="bg-gray-50 py-12 md:py-16 lg:py-20">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-wacat-navy mb-2">
        {{ section.settings.title }}
      </h2>
      <p class="text-sm text-wacat-navy/60">
        {{ section.settings.subtitle }}
      </p>
    </div>

    <!-- Swiper Container -->
    <div class="swiper testimonials-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="bg-white rounded-2xl p-8 shadow-lg max-w-2xl mx-auto border border-wacat-navy/5">
              <div class="flex items-center justify-center gap-1 mb-4">
                {% for i in (1..block.settings.rating) %}
                  <span class="text-2xl">⭐</span>
                {% endfor %}
              </div>
              <blockquote class="text-base md:text-lg text-wacat-navy/80 italic mb-6 leading-relaxed">
                "{{ block.settings.quote }}"
              </blockquote>
              <div class="text-center">
                <p class="text-sm font-semibold text-wacat-navy">{{ block.settings.author }}</p>
                <p class="text-xs text-wacat-navy/60">Dueño/a de {{ block.settings.cat_name }} ({{ block.settings.cat_age }})</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      <div class="swiper-pagination mt-8"></div>
    </div>
  </div>
</section>
