{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonios"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Gatos m√°s felices"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "cat_name",
          "label": "Cat Name"
        },
        {
          "type": "text",
          "id": "cat_age",
          "label": "Cat Age"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "default": 5
        }
      ]
    }
  ]
}
{% endschema %}

<section id="testimonios" class="bg-white py-20 md:py-32">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <!-- Swiper Container -->
    <div class="swiper testimonials-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="text-center max-w-xl mx-auto">
              <blockquote class="text-lg md:text-xl text-wacat-navy/70 font-light mb-8 leading-relaxed">
                "{{ block.settings.quote }}"
              </blockquote>
              <p class="text-sm font-medium text-wacat-navy/50">{{ block.settings.author }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      <div class="swiper-pagination mt-12"></div>
    </div>
  </div>
</section>
