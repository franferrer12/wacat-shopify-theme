{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Para gatos que necesitan beber más"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "¿Tu gato no bebe suficiente agua?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "La mayoría de los gatos están deshidratados y sus dueños no lo saben. WACAT hace que beber agua sea irresistible para tu gato."
    },
    {
      "type": "text",
      "id": "checkpoint_1_title",
      "label": "Checkpoint 1 Title",
      "default": "¿Notas su cuenco siempre lleno?"
    },
    {
      "type": "text",
      "id": "checkpoint_1_subtitle",
      "label": "Checkpoint 1 Subtitle",
      "default": "La deshidratación es silenciosa pero peligrosa"
    },
    {
      "type": "text",
      "id": "checkpoint_2_title",
      "label": "Checkpoint 2 Title",
      "default": "¿Te preocupan sus riñones?"
    },
    {
      "type": "text",
      "id": "checkpoint_2_subtitle",
      "label": "Checkpoint 2 Subtitle",
      "default": "30% de gatos mayores desarrollan enfermedad renal"
    },
    {
      "type": "text",
      "id": "checkpoint_3_title",
      "label": "Checkpoint 3 Title",
      "default": "¿Has probado de todo?"
    },
    {
      "type": "text",
      "id": "checkpoint_3_subtitle",
      "label": "Checkpoint 3 Subtitle",
      "default": "Fuentes, cambiar el agua, diferentes cuencos..."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Quiero que mi gato beba más"
    },
    {
      "type": "text",
      "id": "cta_subtitle",
      "label": "CTA Subtitle",
      "default": "Envío 24-48h · Garantía 30 días o reembolso"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (optional, will use product image if not set)"
    },
    {
      "type": "text",
      "id": "badge_multiplier",
      "label": "Hydration Multiplier Badge",
      "default": "3"
    },
    {
      "type": "text",
      "id": "badge_bottom_text",
      "label": "Bottom Badge Text",
      "default": "Recomendado por veterinarios"
    }
  ]
}
{% endschema %}

{% comment %} Get product data {% endcomment %}
{%- assign product = all_products[section.settings.product] -%}
{%- if section.settings.hero_image != blank -%}
  {%- assign hero_image = section.settings.hero_image | img_url: 'master' -%}
{%- elsif product.featured_image -%}
  {%- assign hero_image = product.featured_image | img_url: 'master' -%}
{%- else -%}
  {%- assign hero_image = 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=800&h=800&fit=crop' -%}
{%- endif -%}

{%- if product.selected_or_first_available_variant -%}
  {%- assign variant = product.selected_or_first_available_variant -%}
  {%- assign product_price = variant.price | money_without_trailing_zeros -%}
  {%- assign checkout_url = '/cart/add?id=' | append: variant.id -%}
{%- else -%}
  {%- assign product_price = '29€' -%}
  {%- assign checkout_url = '#producto' -%}
{%- endif -%}

<section class="relative min-h-screen flex items-center overflow-hidden bg-white">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-pattern-dots opacity-50"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full relative z-10 py-20 md:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">

      <!-- Content -->
      <div class="space-y-10 order-2 lg:order-1">
        <!-- Badge -->
        <div class="inline-flex">
          <span class="badge badge-primary">
            <i class="las la-water mr-1"></i>
            {{ section.settings.badge_text }}
          </span>
        </div>

        <!-- Main heading -->
        <div class="space-y-6">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-extralight text-wacat-navy leading-tight tracking-tight hero-title">
            Tu gato necesita
            <span class="block font-light text-gradient">más agua</span>
          </h1>

          <p class="body-lg text-secondary max-w-xl hero-subtitle">
            {{ section.settings.subtitle }}
          </p>
        </div>

        <!-- Stats inline -->
        <div class="flex gap-8 py-4">
          <div>
            <div class="text-3xl font-extralight text-wacat-navy">{{ section.settings.badge_multiplier }}×</div>
            <div class="caption text-tertiary">Más hidratación</div>
          </div>
          <div class="divider-vertical"></div>
          <div>
            <div class="text-3xl font-extralight text-wacat-navy">70%</div>
            <div class="caption text-tertiary">Gatos deshidratados</div>
          </div>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a href="{{ checkout_url }}" class="btn btn-primary btn-lg hero-cta opacity-0">
            <i class="las la-shopping-cart"></i>
            Comprar ahora
            {% if product_price != '' %}
              <span class="ml-2">{{ product_price }}</span>
            {% endif %}
          </a>
          <a href="#beneficios" class="btn btn-secondary btn-lg">
            Ver beneficios
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center gap-6 pt-6 text-sm text-tertiary">
          <div class="flex items-center gap-2">
            <i class="las la-shipping-fast text-lg"></i>
            <span>Envío 24-48h</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="las la-shield-alt text-lg"></i>
            <span>Garantía 30 días</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="las la-user-md text-lg"></i>
            <span>Recomendado por vets</span>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="order-1 lg:order-2 hero-image relative">
        <!-- Decorative circle -->
        <div class="absolute -top-10 -right-10 w-64 h-64 bg-wacat-cream rounded-full opacity-50 blur-3xl"></div>
        <div class="absolute -bottom-10 -left-10 w-64 h-64 bg-wacat-navy/10 rounded-full opacity-50 blur-3xl"></div>

        <div class="relative z-10">
          {% if hero_image != '' %}
            <img
              src="{{ hero_image }}"
              alt="WACAT - Hidratación natural para gatos"
              class="w-full h-auto rounded-3xl shadow-2xl"
              loading="eager"
            />
          {% else %}
            <div class="aspect-square bg-gradient-to-br from-wacat-cream to-white rounded-3xl shadow-2xl flex items-center justify-center">
              <i class="las la-cat text-9xl text-wacat-navy/20"></i>
            </div>
          {% endif %}

          <!-- Floating badge -->
          <div class="absolute -bottom-6 -left-6 bg-white rounded-2xl shadow-xl p-6 hidden sm:block">
            <div class="flex items-center gap-4">
              <div class="icon-circle icon-circle-lg">
                <i class="las la-heart text-2xl"></i>
              </div>
              <div>
                <div class="text-2xl font-extralight text-wacat-navy">+1000</div>
                <div class="text-sm text-tertiary">Gatos felices</div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
