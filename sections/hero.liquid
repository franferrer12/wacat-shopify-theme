{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Para gatos que necesitan beber más"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "¿Tu gato no bebe suficiente agua?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "La mayoría de los gatos están deshidratados y sus dueños no lo saben. WACAT hace que beber agua sea irresistible para tu gato."
    },
    {
      "type": "text",
      "id": "checkpoint_1_title",
      "label": "Checkpoint 1 Title",
      "default": "¿Notas su cuenco siempre lleno?"
    },
    {
      "type": "text",
      "id": "checkpoint_1_subtitle",
      "label": "Checkpoint 1 Subtitle",
      "default": "La deshidratación es silenciosa pero peligrosa"
    },
    {
      "type": "text",
      "id": "checkpoint_2_title",
      "label": "Checkpoint 2 Title",
      "default": "¿Te preocupan sus riñones?"
    },
    {
      "type": "text",
      "id": "checkpoint_2_subtitle",
      "label": "Checkpoint 2 Subtitle",
      "default": "30% de gatos mayores desarrollan enfermedad renal"
    },
    {
      "type": "text",
      "id": "checkpoint_3_title",
      "label": "Checkpoint 3 Title",
      "default": "¿Has probado de todo?"
    },
    {
      "type": "text",
      "id": "checkpoint_3_subtitle",
      "label": "Checkpoint 3 Subtitle",
      "default": "Fuentes, cambiar el agua, diferentes cuencos..."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Quiero que mi gato beba más"
    },
    {
      "type": "text",
      "id": "cta_subtitle",
      "label": "CTA Subtitle",
      "default": "Envío 24-48h · Garantía 30 días o reembolso"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (optional, will use product image if not set)"
    },
    {
      "type": "text",
      "id": "badge_multiplier",
      "label": "Hydration Multiplier Badge",
      "default": "3"
    },
    {
      "type": "text",
      "id": "badge_bottom_text",
      "label": "Bottom Badge Text",
      "default": "Recomendado por veterinarios"
    }
  ]
}
{% endschema %}

{% comment %} Get product data {% endcomment %}
{%- assign product = all_products[section.settings.product] -%}
{%- if section.settings.hero_image != blank -%}
  {%- assign hero_image = section.settings.hero_image | img_url: 'master' -%}
{%- elsif product.featured_image -%}
  {%- assign hero_image = product.featured_image | img_url: 'master' -%}
{%- else -%}
  {%- assign hero_image = 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=800&h=800&fit=crop' -%}
{%- endif -%}

{%- if product.selected_or_first_available_variant -%}
  {%- assign variant = product.selected_or_first_available_variant -%}
  {%- assign product_price = variant.price | money_without_trailing_zeros -%}
  {%- assign checkout_url = '/cart/add?id=' | append: variant.id -%}
{%- else -%}
  {%- assign product_price = '29€' -%}
  {%- assign checkout_url = '#producto' -%}
{%- endif -%}

<section class="bg-white min-h-screen flex items-center relative overflow-hidden pt-20 pb-12 md:py-20" style="overflow-x: hidden; overflow-y: visible;">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      <!-- Contenido - order-2 en móvil -->
      <div class="space-y-12 order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-wacat-navy leading-tight hero-title">
          Tu gato necesita agua
        </h1>

        <p class="text-xl md:text-2xl text-wacat-navy/60 font-light hero-subtitle">
          WACAT ayuda
        </p>

        <!-- CTA Touch-Friendly -->
        <div class="pt-8 flex flex-col gap-4">
          <a
            href="{{ checkout_url }}"
            class="hero-cta opacity-0 flex items-center justify-center bg-wacat-navy text-white px-10 py-5 rounded-full text-lg font-medium hover:bg-wacat-navy-dark active:scale-95 transition-all duration-300"
          >
            Comprar
            {% if product_price != '' %}
              <span class="opacity-70 ml-2">{{ product_price }}</span>
            {% endif %}
          </a>
        </div>
      </div>

      <!-- Imagen - order-1 en móvil (aparece primero) -->
      <div class="hero-image relative will-change-transform order-1 lg:order-2">
        <div class="relative rounded-2xl overflow-hidden">
          {% if hero_image != '' %}
            <img
              src="{{ hero_image }}"
              alt="WACAT"
              class="w-full h-auto"
              loading="eager"
            />
          {% else %}
            <div class="aspect-square bg-wacat-cream flex items-center justify-center">
              <i class="las la-cat text-9xl text-wacat-navy/20"></i>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
