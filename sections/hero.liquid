{% comment %} Get product data {% endcomment %}
{%- assign product = all_products[section.settings.product] -%}
{%- if section.settings.hero_image != blank -%}
  {%- assign hero_image = section.settings.hero_image | img_url: 'master' -%}
{%- elsif product.featured_image -%}
  {%- assign hero_image = product.featured_image | img_url: 'master' -%}
{%- else -%}
  {%- assign hero_image = 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=800&h=800&fit=crop' -%}
{%- endif -%}

{%- if product.selected_or_first_available_variant -%}
  {%- assign variant = product.selected_or_first_available_variant -%}
  {%- assign product_price = variant.price | money_without_trailing_zeros -%}
  {%- assign checkout_url = '/cart/add?id=' | append: variant.id -%}
{%- else -%}
  {%- assign product_price = '29€' -%}
  {%- assign checkout_url = '#producto' -%}
{%- endif -%}

<style>
  #hero-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    padding-left: {{ section.settings.padding_left_mobile }}px;
    padding-right: {{ section.settings.padding_right_mobile }}px;
  }

  #hero-{{ section.id }} .hero-grid {
    gap: {{ section.settings.content_gap_mobile }}px;
  }

  #hero-{{ section.id }} .hero-content {
    gap: {{ section.settings.heading_gap_mobile }}px;
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    #hero-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
      padding-left: {{ section.settings.padding_left_tablet }}px;
      padding-right: {{ section.settings.padding_right_tablet }}px;
    }

    #hero-{{ section.id }} .hero-grid {
      gap: {{ section.settings.content_gap_tablet }}px;
    }

    #hero-{{ section.id }} .hero-content {
      gap: {{ section.settings.heading_gap_tablet }}px;
    }
  }

  @media (min-width: 1024px) {
    #hero-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }

    #hero-{{ section.id }} .hero-grid {
      gap: {{ section.settings.content_gap_desktop }}px;
    }

    #hero-{{ section.id }} .hero-content {
      gap: {{ section.settings.heading_gap_desktop }}px;
    }
  }
</style>

<section id="hero-{{ section.id }}" class="relative min-h-screen flex items-center overflow-hidden bg-white">
  <!-- Background pattern - subtle -->
  <div class="absolute inset-0 bg-pattern-dots opacity-20"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full relative z-10">
    <div class="hero-grid grid grid-cols-1 lg:grid-cols-2 items-center">

      <!-- Content -->
      <div class="hero-content flex flex-col order-2 lg:order-1">
        <!-- Badge -->
        <div class="inline-flex">
          <span class="badge badge-primary">
            <i class="las la-water mr-1"></i>
            {{ section.settings.badge_text }}
          </span>
        </div>

        <!-- Main heading -->
        <div class="space-y-6">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-extralight text-wacat-navy leading-tight tracking-tight">
            {{ section.settings.title }}
          </h1>

          <p class="body-lg text-secondary max-w-xl">
            {{ section.settings.subtitle }}
          </p>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a href="{{ checkout_url }}" class="btn btn-primary btn-lg">
            <i class="las la-shopping-cart"></i>
            {{ section.settings.cta_primary_text }}
            {% if product_price != '' %}
              <span class="ml-2">{{ product_price }}</span>
            {% endif %}
          </a>
          <a href="#beneficios" class="btn btn-secondary btn-lg">
            {{ section.settings.cta_secondary_text }}
          </a>
        </div>
      </div>

      <!-- Image -->
      <div class="order-1 lg:order-2 hero-image relative">
        <!-- Decorative circle - simplified -->
        <div class="absolute -top-20 -right-20 w-96 h-96 bg-wacat-cream rounded-full opacity-30 blur-3xl hidden lg:block"></div>

        <div class="relative z-10">
          {% if hero_image != '' %}
            <img
              src="{{ hero_image }}"
              alt="{{ section.settings.image_alt_text }}"
              class="w-full h-auto rounded-3xl shadow-lg"
              loading="eager"
            />
          {% else %}
            <div class="aspect-square bg-gradient-to-br from-wacat-cream to-white rounded-3xl shadow-lg flex items-center justify-center">
              <i class="las la-cat text-9xl text-wacat-navy/20"></i>
            </div>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>
