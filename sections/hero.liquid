{%- assign product = all_products[section.settings.product] -%}
{%- if section.settings.hero_image != blank -%}
  {%- assign hero_image = section.settings.hero_image | img_url: 'master' -%}
{%- elsif product.featured_image -%}
  {%- assign hero_image = product.featured_image | img_url: 'master' -%}
{%- else -%}
  {%- assign hero_image = '' -%}
{%- endif -%}

{%- if product.selected_or_first_available_variant -%}
  {%- assign variant = product.selected_or_first_available_variant -%}
  {%- assign product_price = variant.price | money_without_trailing_zeros -%}
  {%- assign checkout_url = '/cart/add?id=' | append: variant.id -%}
{%- else -%}
