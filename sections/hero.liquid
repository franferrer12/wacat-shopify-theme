{% schema %}
{
  "name": "Hero B3TTER Style",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Hero Title",
      "default": "AGUA QUE TU GATO ELIJE. SALUD QUE AGRADECES."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "image_alt_text",
      "label": "Image Alt Text",
      "default": "WACAT - Hidratación natural para gatos"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "default": "middle",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "middle", "label": "Middle" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#6B6B6B"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "%",
      "info": "Dark overlay para mejorar legibilidad"
    },
    {
      "type": "header",
      "content": "Animaciones"
    },
    {
      "type": "checkbox",
      "id": "animation_enabled",
      "label": "Habilitar animaciones",
      "default": true
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Tipo de animación",
      "default": "fadeIn",
      "options": [
        { "value": "none", "label": "Sin animación" },
        { "value": "fadeIn", "label": "Fade In" },
        { "value": "fadeInUp", "label": "Fade In Up" },
        { "value": "fadeInDown", "label": "Fade In Down" }
      ]
    },
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Duración animación (ms)",
      "min": 200,
      "max": 2000,
      "step": 100,
      "default": 800,
      "unit": "ms"
    },
    {
      "type": "range",
      "id": "animation_delay",
      "label": "Delay animación (ms)",
      "min": 0,
      "max": 2000,
      "step": 100,
      "default": 0,
      "unit": "ms"
    }
  ]
}
{% endschema %}

{% comment %} Get hero image {% endcomment %}
{%- if section.settings.hero_image != blank -%}
  {%- assign hero_image = section.settings.hero_image | img_url: '2000x' -%}
{%- else -%}
  {%- assign hero_image = 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=2000&h=1200&fit=crop' -%}
{%- endif -%}

<style>
  #hero-b3tter-{{ section.id }} {
    min-height: 85vh;
    position: relative;
    display: flex;
    align-items: {% if section.settings.text_position == 'top' %}flex-start{% elsif section.settings.text_position == 'bottom' %}flex-end{% else %}center{% endif %};
    justify-content: center;
    background-image: url('{{ hero_image }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  #hero-b3tter-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }

  #hero-b3tter-{{ section.id }} .hero-content {
    position: relative;
    z-index: 10;
    padding: 4rem 2rem;
    max-width: 1200px;
    text-align: {{ section.settings.text_align }};
  }

  #hero-b3tter-{{ section.id }} .hero-title {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 300;
    letter-spacing: -0.02em;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  @media (max-width: 768px) {
    #hero-b3tter-{{ section.id }} {
      min-height: 70vh;
    }

    #hero-b3tter-{{ section.id }} .hero-content {
      padding: 2rem 1rem;
    }

    #hero-b3tter-{{ section.id }} .hero-title {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }
  }
</style>

<section id="hero-b3tter-{{ section.id }}"
  {% if section.settings.animation_enabled %}
    data-animate="true"
    data-animation-type="{{ section.settings.animation_type }}"
    data-animation-duration="{{ section.settings.animation_duration }}"
    data-animation-delay="{{ section.settings.animation_delay }}"
  {% endif %}>
  <div class="hero-content">
    <h1 class="hero-title">
      {{ section.settings.title }}
    </h1>
  </div>
</section>
