{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Cómo funciona"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Tres pasos simples"
    },
    {
      "type": "text",
      "id": "step_1_title",
      "label": "Step 1 Title",
      "default": "Añade unas gotas"
    },
    {
      "type": "text",
      "id": "step_1_description",
      "label": "Step 1 Description",
      "default": "Mezcla WACAT con el agua diaria de tu gato"
    },
    {
      "type": "text",
      "id": "step_2_title",
      "label": "Step 2 Title",
      "default": "Tu gato descubre"
    },
    {
      "type": "text",
      "id": "step_2_description",
      "label": "Step 2 Description",
      "default": "Los sabores naturales atraen su instinto"
    },
    {
      "type": "text",
      "id": "step_3_title",
      "label": "Step 3 Title",
      "default": "Hidratación mejorada"
    },
    {
      "type": "text",
      "id": "step_3_description",
      "label": "Step 3 Description",
      "default": "Mejora su salud renal y vitalidad general"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Espaciado izquierdo (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Espaciado derecho (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Espaciado Interno"
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "Separación entre elementos (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64,
      "unit": "px",
      "info": "Controla el espacio entre elementos principales de la sección"
    }
  ]
}
{% endschema %}

<section id="como-funciona" class="bg-white" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; padding-left: {{ section.settings.padding_left }}px; padding-right: {{ section.settings.padding_right }}px;">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="text-center mb-20 max-w-3xl mx-auto">
      <h2 class="heading-xl text-wacat-navy mb-6">
        {{ section.settings.title }}
      </h2>
      <p class="body-lg text-secondary">
        {{ section.settings.subtitle }}
      </p>
    </div>

    <!-- Steps -->
    <div class="grid grid-cols-1 md:grid-cols-3" style="gap: {{ section.settings.content_gap }}px;">

      <!-- Step 1 -->
      <div class="text-center relative">
        <!-- Step number circle -->
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-wacat-navy text-white mb-8">
          <span class="text-2xl font-extralight">01</span>
        </div>

        <h3 class="heading-md text-primary mb-4">
          {{ section.settings.step_1_title }}
        </h3>

        <p class="body-sm text-secondary">
          {{ section.settings.step_1_description }}
        </p>

        <!-- Connector arrow (hidden on mobile) -->
        <div class="hidden md:block absolute top-10 -right-8 text-wacat-navy/20">
          <i class="las la-arrow-right text-3xl"></i>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="text-center relative">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-wacat-navy text-white mb-8">
          <span class="text-2xl font-extralight">02</span>
        </div>

        <h3 class="heading-md text-primary mb-4">
          {{ section.settings.step_2_title }}
        </h3>

        <p class="body-sm text-secondary">
          {{ section.settings.step_2_description }}
        </p>

        <div class="hidden md:block absolute top-10 -right-8 text-wacat-navy/20">
          <i class="las la-arrow-right text-3xl"></i>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-wacat-navy text-white mb-8">
          <span class="text-2xl font-extralight">03</span>
        </div>

        <h3 class="heading-md text-primary mb-4">
          {{ section.settings.step_3_title }}
        </h3>

        <p class="body-sm text-secondary">
          {{ section.settings.step_3_description }}
        </p>
      </div>

    </div>
  </div>
</section>
