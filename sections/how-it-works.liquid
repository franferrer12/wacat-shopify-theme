{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Cómo funciona"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Tres pasos simples"
    },
    {
      "type": "text",
      "id": "step_1_title",
      "label": "Step 1 Title",
      "default": "Añade unas gotas"
    },
    {
      "type": "text",
      "id": "step_1_description",
      "label": "Step 1 Description",
      "default": "Mezcla WACAT con el agua diaria de tu gato"
    },
    {
      "type": "text",
      "id": "step_2_title",
      "label": "Step 2 Title",
      "default": "Tu gato descubre"
    },
    {
      "type": "text",
      "id": "step_2_description",
      "label": "Step 2 Description",
      "default": "Los sabores naturales atraen su instinto"
    },
    {
      "type": "text",
      "id": "step_3_title",
      "label": "Step 3 Title",
      "default": "Hidratación mejorada"
    },
    {
      "type": "text",
      "id": "step_3_description",
      "label": "Step 3 Description",
      "default": "Mejora su salud renal y vitalidad general"
    }
  ]
}
{% endschema %}

<style>
  #section-{{ section.id }} {
    padding: 21px 27px;
    background: #ffffff;
    font-family: Assistant, sans-serif;
  }

  #section-{{ section.id }} .container {
    max-width: 120rem;
    margin: 0 auto;
  }

  #section-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  #section-{{ section.id }} .section-title {
    font-size: 30px; /* h1 mobile EXACTO B3TTER */
    font-weight: 400;
    color: #121212;
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: 0.06rem; /* EXACTO B3TTER */
  }

  #section-{{ section.id }} .section-subtitle {
    font-size: 16px; /* body text EXACTO B3TTER */
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
    line-height: 1.5;
    letter-spacing: 0.06rem; /* EXACTO B3TTER */
  }

  #section-{{ section.id }} .steps-container {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  #section-{{ section.id }} .step {
    text-align: center;
    position: relative;
  }

  #section-{{ section.id }} .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: #121212;
    color: #ffffff;
    border-radius: 50%;
    margin-bottom: 32px;
  }

  #section-{{ section.id }} .step-number span {
    font-size: 28px;
    font-weight: 400;
  }

  #section-{{ section.id }} .step-title {
    font-size: 20px; /* h2 mobile EXACTO B3TTER */
    font-weight: 400;
    color: #121212;
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: 0.06rem; /* EXACTO B3TTER */
  }

  #section-{{ section.id }} .step-description {
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
    line-height: 1.5;
  }

  #section-{{ section.id }} .step-arrow {
    display: none;
  }

  @media (min-width: 768px) {
    #section-{{ section.id }} {
      padding: 28px 36px;
    }

    #section-{{ section.id }} .section-header {
      margin-bottom: 64px;
    }

    #section-{{ section.id }} .steps-container {
      flex-direction: row;
      gap: 48px;
    }

    #section-{{ section.id }} .step {
      flex: 1;
    }

    #section-{{ section.id }} .step-arrow {
      display: block;
      position: absolute;
      top: 40px;
      right: -36px;
      font-size: 32px;
      color: rgba(18, 18, 18, 0.1);
    }

    #section-{{ section.id }} .step:last-child .step-arrow {
      display: none;
    }

    #section-{{ section.id }} .step-description {
      font-size: 16px;
    }
  }

  @media (min-width: 1024px) {
    #section-{{ section.id }} {
      padding: 36px 48px;
    }

    #section-{{ section.id }} .section-title {
      font-size: 40px; /* h1 desktop EXACTO B3TTER */
    }

    #section-{{ section.id }} .section-subtitle {
      font-size: 20px; /* h2 mobile EXACTO B3TTER (sin cambio desktop) */
    }

    #section-{{ section.id }} .step-title {
      font-size: 24px; /* h2 desktop EXACTO B3TTER */
    }
  }
</style>

<section id="section-{{ section.id }}">
  <div class="container">

    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="steps-container">

      <div class="step">
        <div class="step-number">
          <span>01</span>
        </div>
        <h3 class="step-title">{{ section.settings.step_1_title }}</h3>
        <p class="step-description">{{ section.settings.step_1_description }}</p>
        <div class="step-arrow">
          <i class="las la-arrow-right"></i>
        </div>
      </div>

      <div class="step">
        <div class="step-number">
          <span>02</span>
        </div>
        <h3 class="step-title">{{ section.settings.step_2_title }}</h3>
        <p class="step-description">{{ section.settings.step_2_description }}</p>
        <div class="step-arrow">
          <i class="las la-arrow-right"></i>
        </div>
      </div>

      <div class="step">
        <div class="step-number">
          <span>03</span>
        </div>
        <h3 class="step-title">{{ section.settings.step_3_title }}</h3>
        <p class="step-description">{{ section.settings.step_3_description }}</p>
      </div>

    </div>

  </div>
</section>
