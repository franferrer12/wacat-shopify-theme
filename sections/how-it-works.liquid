{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Cómo funciona"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Tres pasos simples"
    },
    {
      "type": "text",
      "id": "step_1_title",
      "label": "Step 1 Title",
      "default": "Añade unas gotas"
    },
    {
      "type": "text",
      "id": "step_1_description",
      "label": "Step 1 Description",
      "default": "Mezcla WACAT con el agua diaria de tu gato"
    },
    {
      "type": "text",
      "id": "step_2_title",
      "label": "Step 2 Title",
      "default": "Tu gato descubre"
    },
    {
      "type": "text",
      "id": "step_2_description",
      "label": "Step 2 Description",
      "default": "Los sabores naturales atraen su instinto"
    },
    {
      "type": "text",
      "id": "step_3_title",
      "label": "Step 3 Title",
      "default": "Hidratación mejorada"
    },
    {
      "type": "text",
      "id": "step_3_description",
      "label": "Step 3 Description",
      "default": "Mejora su salud renal y vitalidad general"
    }
  ]
}
{% endschema %}

<section id="como-funciona" class="bg-white py-20 md:py-32">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-20">
      <div class="animated-section text-center">
        <div class="step-number text-7xl font-light text-wacat-navy/20 mb-8">01</div>
        <h3 class="text-lg font-medium text-wacat-navy mb-3">
          {{ section.settings.step_1_title }}
        </h3>
        <p class="text-sm text-wacat-navy/60 font-light">
          {{ section.settings.step_1_description }}
        </p>
      </div>

      <div class="animated-section text-center">
        <div class="step-number text-7xl font-light text-wacat-navy/20 mb-8">02</div>
        <h3 class="text-lg font-medium text-wacat-navy mb-3">
          {{ section.settings.step_2_title }}
        </h3>
        <p class="text-sm text-wacat-navy/60 font-light">
          {{ section.settings.step_2_description }}
        </p>
      </div>

      <div class="animated-section text-center">
        <div class="step-number text-7xl font-light text-wacat-navy/20 mb-8">03</div>
        <h3 class="text-lg font-medium text-wacat-navy mb-3">
          {{ section.settings.step_3_title }}
        </h3>
        <p class="text-sm text-wacat-navy/60 font-light">
          {{ section.settings.step_3_description }}
        </p>
      </div>
    </div>
  </div>
</section>
