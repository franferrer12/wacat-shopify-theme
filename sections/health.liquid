{% schema %}
{
  "name": "Health",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "La importancia de la hidratación"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Los gatos tienen un instinto de sed reducido heredado de sus ancestros del desierto"
    },
    {
      "type": "text",
      "id": "without_title",
      "label": "Without Hydration Title",
      "default": "Sin hidratación"
    },
    {
      "type": "text",
      "id": "with_title",
      "label": "With Hydration Title",
      "default": "Con hidratación"
    }
  ],
  "blocks": [
    {
      "type": "negative_point",
      "name": "Negative Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "positive_point",
      "name": "Positive Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}

<section id="salud" class="bg-wacat-cream py-20 md:py-32">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-wacat-navy">
        {{ section.settings.title }}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-20">
      <!-- Sin hidratación -->
      <div class="animated-section space-y-4">
        <h3 class="text-xl font-medium text-wacat-navy/40 mb-8">
          {{ section.settings.without_title }}
        </h3>
        {% for block in section.blocks %}
          {% if block.type == 'negative_point' %}
            <p class="text-sm text-wacat-navy/50 font-light">
              {{ block.settings.text }}
            </p>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Con hidratación -->
      <div class="animated-section space-y-4">
        <h3 class="text-xl font-medium text-wacat-navy mb-8">
          {{ section.settings.with_title }}
        </h3>
        {% for block in section.blocks %}
          {% if block.type == 'positive_point' %}
            <p class="text-sm text-wacat-navy font-light">
              {{ block.settings.text }}
            </p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
