{% schema %}
{
  "name": "Health",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "La importancia de la hidratación"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Los gatos tienen un instinto de sed reducido heredado de sus ancestros del desierto"
    },
    {
      "type": "text",
      "id": "without_title",
      "label": "Without Hydration Title",
      "default": "Sin hidratación"
    },
    {
      "type": "text",
      "id": "with_title",
      "label": "With Hydration Title",
      "default": "Con hidratación"
    },
    {
      "type": "text",
      "id": "recommended_badge",
      "label": "Recommended Badge Text",
      "default": "Recomendado"
    },
    {
      "type": "header",
      "content": "Espaciado Móvil (< 768px)"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Espaciado superior móvil (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 64,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Espaciado inferior móvil (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 64,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "label": "Espaciado izquierdo móvil (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "label": "Espaciado derecho móvil (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "content_gap_mobile",
      "label": "Separación entre elementos móvil (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Espaciado Tablet (768px - 1024px)"
    },
    {
      "type": "range",
      "id": "padding_top_tablet",
      "label": "Espaciado superior tablet (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_tablet",
      "label": "Espaciado inferior tablet (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left_tablet",
      "label": "Espaciado izquierdo tablet (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right_tablet",
      "label": "Espaciado derecho tablet (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "content_gap_tablet",
      "label": "Separación entre elementos tablet (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Espaciado Desktop (>= 1024px)"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Espaciado superior desktop (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Espaciado inferior desktop (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "label": "Espaciado izquierdo desktop (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "label": "Espaciado derecho desktop (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "content_gap_desktop",
      "label": "Separación entre elementos desktop (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Animaciones"
    },
    {
      "type": "checkbox",
      "id": "animation_enabled",
      "label": "Habilitar animaciones",
      "default": true
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Tipo de animación",
      "default": "fadeInUp",
      "options": [
        { "value": "none", "label": "Sin animación" },
        { "value": "fadeIn", "label": "Fade In" },
        { "value": "fadeInUp", "label": "Fade In Up" },
        { "value": "fadeInDown", "label": "Fade In Down" },
        { "value": "fadeInLeft", "label": "Fade In Left" },
        { "value": "fadeInRight", "label": "Fade In Right" },
        { "value": "scaleIn", "label": "Scale In" },
        { "value": "zoomIn", "label": "Zoom In" },
        { "value": "slideInUp", "label": "Slide In Up" },
        { "value": "slideInDown", "label": "Slide In Down" },
        { "value": "slideInLeft", "label": "Slide In Left" },
        { "value": "slideInRight", "label": "Slide In Right" },
        { "value": "rotateIn", "label": "Rotate In" },
        { "value": "flipInX", "label": "Flip In X" },
        { "value": "flipInY", "label": "Flip In Y" },
        { "value": "bounceIn", "label": "Bounce In" },
        { "value": "elastic", "label": "Elastic" }
      ]
    },
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Duración animación (ms)",
      "min": 200,
      "max": 2000,
      "step": 100,
      "default": 800,
      "unit": "ms"
    },
    {
      "type": "range",
      "id": "animation_delay",
      "label": "Delay animación (ms)",
      "min": 0,
      "max": 2000,
      "step": 100,
      "default": 0,
      "unit": "ms"
    },
    {
      "type": "range",
      "id": "animation_stagger",
      "label": "Stagger entre elementos (ms)",
      "min": 0,
      "max": 300,
      "step": 50,
      "default": 100,
      "unit": "ms",
      "info": "Retraso escalonado entre elementos hijos animados"
    },
    {
      "type": "checkbox",
      "id": "animation_repeat",
      "label": "Repetir animación al hacer scroll",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "negative_point",
      "name": "Negative Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "positive_point",
      "name": "Positive Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  #health-{{ section.id }} {
    background-color: #F3F3F3;
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    padding-left: {{ section.settings.padding_left_mobile }}px;
    padding-right: {{ section.settings.padding_right_mobile }}px;
  }

  #health-{{ section.id }} .health-wrapper {
    max-width: 120rem;
    margin-left: auto;
    margin-right: auto;
  }

  #health-{{ section.id }} .health-header {
    text-align: center;
    margin-bottom: 5rem;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
  }

  #health-{{ section.id }} .health-title {
    font-family: Assistant, sans-serif;
    font-size: 21px;
    line-height: 27px;
    font-weight: 400;
    color: #121212;
    margin: 0 0 1.5rem 0;
  }

  #health-{{ section.id }} .health-subtitle {
    font-family: Assistant, sans-serif;
    font-size: 16px;
    line-height: 21px;
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
  }

  #health-{{ section.id }} .health-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.content_gap_mobile }}px;
  }

  #health-{{ section.id }} .health-card {
    border-radius: 20px;
    padding: 21px;
    position: relative;
  }

  #health-{{ section.id }} .health-card-without {
    background-color: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(18, 18, 18, 0.1);
  }

  #health-{{ section.id }} .health-card-with {
    background-color: #FFFFFF;
    border: 2px solid rgba(18, 18, 18, 0.2);
    overflow: hidden;
  }

  #health-{{ section.id }} .health-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  #health-{{ section.id }} .health-icon-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  #health-{{ section.id }} .health-icon-circle-negative {
    background-color: rgba(239, 68, 68, 0.1);
  }

  #health-{{ section.id }} .health-icon-circle-positive {
    background-color: rgba(34, 197, 94, 0.1);
  }

  #health-{{ section.id }} .health-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  #health-{{ section.id }} .health-icon-negative {
    color: #DC2626;
  }

  #health-{{ section.id }} .health-icon-positive {
    color: #16A34A;
  }

  #health-{{ section.id }} .health-card-title {
    font-family: Assistant, sans-serif;
    font-size: 18px;
    line-height: 23px;
    font-weight: 400;
    margin: 0;
  }

  #health-{{ section.id }} .health-card-title-without {
    color: rgba(18, 18, 18, 0.6);
  }

  #health-{{ section.id }} .health-card-title-with {
    color: #121212;
  }

  #health-{{ section.id }} .health-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: #121212;
    color: #FFFFFF;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-family: Assistant, sans-serif;
    font-size: 12px;
    font-weight: 400;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  #health-{{ section.id }} .health-points {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  #health-{{ section.id }} .health-point {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  #health-{{ section.id }} .health-point-icon {
    flex-shrink: 0;
    margin-top: 0.25rem;
    font-size: 1.125rem;
    line-height: 1;
  }

  #health-{{ section.id }} .health-point-icon-negative {
    color: rgba(239, 68, 68, 0.6);
  }

  #health-{{ section.id }} .health-point-icon-positive {
    color: #16A34A;
  }

  #health-{{ section.id }} .health-point-text {
    font-family: Assistant, sans-serif;
    font-size: 14px;
    line-height: 18px;
    font-weight: 400;
    margin: 0;
  }

  #health-{{ section.id }} .health-point-text-negative {
    color: #7C7C7C;
  }

  #health-{{ section.id }} .health-point-text-positive {
    color: #121212;
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    #health-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
      padding-left: {{ section.settings.padding_left_tablet }}px;
      padding-right: {{ section.settings.padding_right_tablet }}px;
    }

    #health-{{ section.id }} .health-container {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.content_gap_tablet }}px;
    }

    #health-{{ section.id }} .health-card {
      padding: 28px;
    }

    #health-{{ section.id }} .health-title {
      font-size: 28px;
      line-height: 36px;
    }

    #health-{{ section.id }} .health-subtitle {
      font-size: 18px;
      line-height: 23px;
    }

    #health-{{ section.id }} .health-card-title {
      font-size: 21px;
      line-height: 27px;
    }

    #health-{{ section.id }} .health-point-text {
      font-size: 16px;
      line-height: 21px;
    }
  }

  @media (min-width: 1024px) {
    #health-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }

    #health-{{ section.id }} .health-container {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.content_gap_desktop }}px;
    }

    #health-{{ section.id }} .health-card {
      padding: 36px;
    }

    #health-{{ section.id }} .health-title {
      font-size: 36px;
      line-height: 48px;
    }

    #health-{{ section.id }} .health-subtitle {
      font-size: 21px;
      line-height: 27px;
    }

    #health-{{ section.id }} .health-card-title {
      font-size: 24px;
      line-height: 31px;
    }

    #health-{{ section.id }} .health-point-text {
      font-size: 18px;
      line-height: 23px;
    }
  }
</style>

<section id="health-{{ section.id }}"
  {% if section.settings.animation_enabled %}
    data-animate="true"
    data-animation-type="{{ section.settings.animation_type }}"
    data-animation-duration="{{ section.settings.animation_duration }}"
    data-animation-delay="{{ section.settings.animation_delay }}"
    data-animation-stagger="{{ section.settings.animation_stagger }}"
    data-animation-repeat="{{ section.settings.animation_repeat }}"
  {% endif %}>
  <div class="health-wrapper">

    <header class="health-header">
      <h2 class="health-title">
        {{ section.settings.title }}
      </h2>
      <p class="health-subtitle">
        {{ section.settings.subtitle }}
      </p>
    </header>

    <div class="health-container">

      <article class="health-card health-card-without">
        <div class="health-card-header">
          <div class="health-icon-circle health-icon-circle-negative">
            <i class="las la-times health-icon health-icon-negative"></i>
          </div>
          <h3 class="health-card-title health-card-title-without">
            {{ section.settings.without_title }}
          </h3>
        </div>

        <div class="health-points">
          {% for block in section.blocks %}
            {% if block.type == 'negative_point' %}
              <div class="health-point">
                <i class="las la-exclamation-circle health-point-icon health-point-icon-negative"></i>
                <p class="health-point-text health-point-text-negative">
                  {{ block.settings.text }}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </article>

      <article class="health-card health-card-with">
        <span class="health-badge">
          <i class="las la-star"></i>
          {{ section.settings.recommended_badge }}
        </span>

        <div class="health-card-header">
          <div class="health-icon-circle health-icon-circle-positive">
            <i class="las la-check health-icon health-icon-positive"></i>
          </div>
          <h3 class="health-card-title health-card-title-with">
            {{ section.settings.with_title }}
          </h3>
        </div>

        <div class="health-points">
          {% for block in section.blocks %}
            {% if block.type == 'positive_point' %}
              <div class="health-point">
                <i class="las la-check-circle health-point-icon health-point-icon-positive"></i>
                <p class="health-point-text health-point-text-positive">
                  {{ block.settings.text }}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </article>

    </div>
  </div>
</section>
