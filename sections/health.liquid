{% schema %}
{
  "name": "Health",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "La importancia de la hidratación"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Los gatos tienen un instinto de sed reducido heredado de sus ancestros del desierto"
    },
    {
      "type": "text",
      "id": "without_title",
      "label": "Without Hydration Title",
      "default": "Sin hidratación"
    },
    {
      "type": "text",
      "id": "with_title",
      "label": "With Hydration Title",
      "default": "Con hidratación"
    }
  ],
  "blocks": [
    {
      "type": "negative_point",
      "name": "Negative Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "positive_point",
      "name": "Positive Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}

<section id="salud" class="bg-wacat-cream section-spacing">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="text-center mb-20 max-w-3xl mx-auto">
      <h2 class="heading-xl text-wacat-navy mb-6">
        {{ section.settings.title }}
      </h2>
      <p class="body-lg text-secondary">
        {{ section.settings.subtitle }}
      </p>
    </div>

    <!-- Comparison Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">

      <!-- Without Hydration -->
      <div class="card bg-white/50 border border-wacat-navy/10 animated-section">
        <div class="flex items-center gap-3 mb-8">
          <div class="icon-circle bg-red-500/10">
            <i class="las la-times text-2xl text-red-600"></i>
          </div>
          <h3 class="heading-md text-wacat-navy/60">
            {{ section.settings.without_title }}
          </h3>
        </div>

        <div class="space-y-4">
          {% for block in section.blocks %}
            {% if block.type == 'negative_point' %}
              <div class="flex items-start gap-3">
                <i class="las la-exclamation-circle text-lg text-red-500/60 flex-shrink-0 mt-1"></i>
                <p class="body-sm text-secondary">
                  {{ block.settings.text }}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- With Hydration -->
      <div class="card bg-white border-2 border-wacat-navy/20 animated-section relative overflow-hidden">
        <!-- Highlight badge -->
        <div class="absolute top-4 right-4">
          <span class="badge badge-primary text-xs">
            <i class="las la-star"></i>
            Recomendado
          </span>
        </div>

        <div class="flex items-center gap-3 mb-8">
          <div class="icon-circle bg-green-500/10">
            <i class="las la-check text-2xl text-green-600"></i>
          </div>
          <h3 class="heading-md text-primary">
            {{ section.settings.with_title }}
          </h3>
        </div>

        <div class="space-y-4">
          {% for block in section.blocks %}
            {% if block.type == 'positive_point' %}
              <div class="flex items-start gap-3">
                <i class="las la-check-circle text-lg text-green-600 flex-shrink-0 mt-1"></i>
                <p class="body-sm text-primary">
                  {{ block.settings.text }}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</section>
