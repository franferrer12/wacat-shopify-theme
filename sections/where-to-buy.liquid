{% schema %}
{
  "name": "Where to Buy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "D贸nde comprar"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Farmacias seleccionadas"
    },
    {
      "type": "text",
      "id": "pharmacy_title",
      "label": "Pharmacy Section Title",
      "default": "En tu farmacia"
    },
    {
      "type": "text",
      "id": "cities",
      "label": "Cities List",
      "default": "Madrid 路 Barcelona 路 Valencia 路 Sevilla"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Title",
      "default": "Contacto"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wacat.com"
    }
  ]
}
{% endschema %}

<section id="donde-comprar" class="bg-white section-spacing">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="heading-xl text-wacat-navy mb-6">
        {{ section.settings.title }}
      </h2>
      <p class="body-lg text-secondary mb-6">
        {{ section.settings.cities }}
      </p>
      <a
        href="mailto:{{ section.settings.email }}"
        class="body-md text-wacat-navy hover:text-wacat-navy-dark transition-colors"
      >
        {{ section.settings.email }}
      </a>
    </div>
  </div>
</section>
