{% schema %}
{
  "name": "Where to Buy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Dónde comprar"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Farmacias seleccionadas"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Madrid · Barcelona · Valencia · Sevilla"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wacat.com"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Espaciado izquierdo (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Espaciado derecho (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Espaciado Interno"
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "Separación entre elementos (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64,
      "unit": "px",
      "info": "Controla el espacio entre elementos principales de la sección"
    }
  ]
}
{% endschema %}

<section id="donde-comprar" class="bg-white" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; padding-left: {{ section.settings.padding_left }}px; padding-right: {{ section.settings.padding_right }}px;">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center text-center" style="gap: {{ section.settings.content_gap }}px;">
      <h2 class="heading-xl text-wacat-navy">
        {{ section.settings.title }}
      </h2>
      <p class="body-lg text-secondary">
        {{ section.settings.description }}
      </p>
      <a
        href="mailto:{{ section.settings.email }}"
        class="btn btn-primary btn-lg"
      >
        <i class="las la-envelope"></i>
        {{ section.settings.email }}
      </a>
    </div>
  </div>
</section>
