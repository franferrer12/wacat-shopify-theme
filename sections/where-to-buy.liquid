{% schema %}
{
  "name": "Where to Buy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "D贸nde comprar"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Farmacias seleccionadas"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Madrid 路 Barcelona 路 Valencia 路 Sevilla"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wacat.com"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    }
  ]
}
{% endschema %}

<section id="donde-comprar" class="bg-white" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="heading-xl text-wacat-navy mb-6">
        {{ section.settings.title }}
      </h2>
      <p class="body-lg text-secondary mb-6">
        {{ section.settings.description }}
      </p>
      <a
        href="mailto:{{ section.settings.email }}"
        class="btn btn-primary btn-lg"
      >
        <i class="las la-envelope"></i>
        {{ section.settings.email }}
      </a>
    </div>
  </div>
</section>
