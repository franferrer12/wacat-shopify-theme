{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "WACAT"
    },
    {
      "type": "text",
      "id": "nav_link_1_text",
      "label": "Nav Link 1 Text",
      "default": "Beneficios"
    },
    {
      "type": "text",
      "id": "nav_link_1_url",
      "label": "Nav Link 1 URL",
      "default": "#beneficios"
    },
    {
      "type": "text",
      "id": "nav_link_2_text",
      "label": "Nav Link 2 Text",
      "default": "Producto"
    },
    {
      "type": "text",
      "id": "nav_link_2_url",
      "label": "Nav Link 2 URL",
      "default": "#producto"
    },
    {
      "type": "text",
      "id": "nav_link_3_text",
      "label": "Nav Link 3 Text",
      "default": "Testimonios"
    },
    {
      "type": "text",
      "id": "nav_link_3_url",
      "label": "Nav Link 3 URL",
      "default": "#testimonios"
    },
    {
      "type": "text",
      "id": "nav_link_4_text",
      "label": "Nav Link 4 Text",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "nav_link_4_url",
      "label": "Nav Link 4 URL",
      "default": "#faq"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Comprar"
    },
    {
      "type": "text",
      "id": "cta_url",
      "label": "CTA Button URL",
      "default": "#producto"
    }
  ]
}
{% endschema %}

<style>
  /* HEADER WRAPPER - EXACTO B3TTER */
  #header-{{ section.id }}-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    margin: 25px 50px 35px;
    transition: all 0.3s ease;
  }

  /* HEADER - EXACTO B3TTER */
  #header-{{ section.id }} {
    font-family: Assistant, sans-serif;
    background-color: transparent;
    border-radius: 32px;
    padding: 9px 45px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    height: 94px;
    transition: all 0.5s cubic-bezier(0.87, 0, 0.13, 1);
  }

  /* MENU IZQUIERDO - EXACTO B3TTER */
  #header-{{ section.id }} .menu-left {
    display: none;
    align-items: center;
    gap: 46px;
    z-index: 2;
    width: 299px;
  }

  @media (min-width: 990px) {
    #header-{{ section.id }} .menu-left {
      display: flex;
    }
  }

  #header-{{ section.id }} .menu-left a {
    font-size: 14px !important; /* EXACTO B3TTER */
    font-weight: 400 !important; /* EXACTO B3TTER - 400 no 900 */
    color: #ffffff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.06rem !important; /* EXACTO B3TTER */
    line-height: 1.5 !important;
    transition: all 0.3s ease;
    padding: 46px 0;
    display: inline-block;
  }

  /* LOGO CENTRAL - EXACTO B3TTER */
  #header-{{ section.id }} .logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  #header-{{ section.id }} .logo a {
    display: block;
  }

  #header-{{ section.id }} .logo img {
    height: 46px;
    width: auto;
    max-width: 114px;
    object-fit: contain;
    display: block;
  }

  #header-{{ section.id }} .logo-text {
    font-size: 24px !important; /* h2 desktop EXACTO B3TTER */
    font-weight: 400 !important; /* EXACTO B3TTER - 400 no 700 */
    letter-spacing: 0.06rem !important; /* EXACTO B3TTER */
    line-height: 1.3 !important;
    color: #ffffff;
    text-decoration: none;
  }

  /* MENU DERECHO - EXACTO B3TTER */
  #header-{{ section.id }} .menu-right {
    display: none;
    align-items: center;
    justify-content: flex-end;
    gap: 32px;
    z-index: 2;
    width: 299px;
  }

  @media (min-width: 990px) {
    #header-{{ section.id }} .menu-right {
      display: flex;
    }
  }

  #header-{{ section.id }} .menu-right a {
    font-size: 14px !important; /* EXACTO B3TTER */
    font-weight: 400 !important; /* EXACTO B3TTER - 400 no 900 */
    color: #ffffff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.06rem !important; /* EXACTO B3TTER */
    line-height: 1.5 !important;
    transition: all 0.3s ease;
    padding: 46px 0;
    display: inline-block;
  }

  /* ICONO CARRITO - EXACTO B3TTER */
  #header-{{ section.id }} .cart-icon {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #ffffff;
    text-decoration: none;
    font-size: 14px !important; /* EXACTO B3TTER */
    font-weight: 400 !important; /* EXACTO B3TTER - 400 no 900 */
    letter-spacing: 0.06rem !important; /* EXACTO B3TTER */
    line-height: 1.5 !important;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }

  #header-{{ section.id }} .cart-icon i {
    font-size: 24px;
  }

  /* MOBILE MENU TOGGLE - EXACTO B3TTER */
  #header-{{ section.id }} .mobile-menu-toggle {
    display: block;
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    z-index: 3;
    padding: 10px;
  }

  @media (min-width: 990px) {
    #header-{{ section.id }} .mobile-menu-toggle {
      display: none;
    }
  }

  #header-{{ section.id }} .mobile-menu-toggle svg {
    width: 24px;
    height: 24px;
    stroke: #7C7C7C;
    stroke-width: 1.8px;
  }

  /* ESTADO SCROLLED - EXACTO B3TTER */
  body.scrolled #header-{{ section.id }}-wrapper {
    margin: 10px 50px 0;
  }

  body.scrolled #header-{{ section.id }} {
    background-color: #ededed;
    border-radius: 32px 32px 0 0;
  }

  body.scrolled #header-{{ section.id }} .menu-left a,
  body.scrolled #header-{{ section.id }} .menu-right a,
  body.scrolled #header-{{ section.id }} .cart-icon,
  body.scrolled #header-{{ section.id }} .logo-text {
    color: #7c7c7c;
  }

  /* MOBILE RESPONSIVE - EXACTO B3TTER */
  @media (max-width: 989px) {
    #header-{{ section.id }}-wrapper {
      margin: 35px 14px;
    }

    body.scrolled #header-{{ section.id }}-wrapper {
      margin: 10px 18px 0;
    }

    #header-{{ section.id }} {
      height: 60px;
      padding: 10px 3rem;
      border-radius: 20px;
      background-color: #ededed;
    }

    body.scrolled #header-{{ section.id }} {
      border-radius: 20px 20px 0 0;
    }

    #header-{{ section.id }} .logo {
      position: static;
      transform: none;
      margin: 0 auto;
    }

    #header-{{ section.id }} .logo img {
      height: 30px;
      max-width: 75px;
    }

    #header-{{ section.id }} .menu-left a,
    #header-{{ section.id }} .menu-right a,
    #header-{{ section.id }} .cart-icon,
    #header-{{ section.id }} .logo-text {
      color: #7c7c7c;
    }

    #header-{{ section.id }} .cart-icon {
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
    }
  }

  /* MOBILE MENU DRAWER */
  #header-{{ section.id }} .mobile-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background-color: #ededed;
    z-index: 60;
    transition: left 0.3s cubic-bezier(0.87, 0, 0.13, 1);
    overflow-y: auto;
    padding: 80px 40px 40px;
  }

  body.mobile-menu-open #header-{{ section.id }} .mobile-menu {
    left: 0;
  }

  body.mobile-menu-open {
    overflow: hidden;
  }

  #header-{{ section.id }} .mobile-menu-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    font-size: 32px;
    color: #7c7c7c;
    cursor: pointer;
    padding: 10px;
  }

  #header-{{ section.id }} .mobile-menu nav {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  #header-{{ section.id }} .mobile-menu a {
    font-size: 18px !important; /* h3 desktop EXACTO B3TTER */
    font-weight: 400 !important; /* EXACTO B3TTER - 400 no 700 */
    letter-spacing: 0.06rem !important; /* EXACTO B3TTER */
    line-height: 1.3 !important;
    color: #7c7c7c;
    text-decoration: none;
    text-transform: uppercase;
    padding: 15px 0;
    border-bottom: 1px solid rgba(124, 124, 124, 0.2);
  }

  /* OVERLAY */
  #header-{{ section.id }} .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 59;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  body.mobile-menu-open #header-{{ section.id }} .mobile-menu-overlay {
    opacity: 1;
    pointer-events: auto;
  }
</style>

<div id="header-{{ section.id }}-wrapper">
  <header id="header-{{ section.id }}">

    <!-- MOBILE MENU TOGGLE -->
    <button class="mobile-menu-toggle" id="mobile-menu-toggle-{{ section.id }}" aria-label="Abrir menú">
      <svg fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- MENU IZQUIERDO -->
    <nav class="menu-left">
      <a href="{{ section.settings.nav_link_1_url }}">{{ section.settings.nav_link_1_text }}</a>
      <a href="{{ section.settings.nav_link_2_url }}">{{ section.settings.nav_link_2_text }}</a>
    </nav>

    <!-- LOGO CENTRAL -->
    <div class="logo">
      {%- if section.settings.logo != blank -%}
        <a href="/">
          <img
            src="{{ section.settings.logo | img_url: 'master' }}"
            alt="{{ shop.name }}"
            loading="eager"
          >
        </a>
      {%- else -%}
        <a href="/" class="logo-text">{{ section.settings.logo_text }}</a>
      {%- endif -%}
    </div>

    <!-- MENU DERECHO -->
    <nav class="menu-right">
      <a href="{{ section.settings.nav_link_3_url }}">{{ section.settings.nav_link_3_text }}</a>
      <a href="{{ section.settings.nav_link_4_url }}">{{ section.settings.nav_link_4_text }}</a>
      <a href="{{ section.settings.cta_url }}" class="cart-icon">
        <i class="las la-shopping-cart"></i>
        <span>{{ section.settings.cta_text }}</span>
      </a>
    </nav>

    <!-- CART ICON MOBILE -->
    <a href="{{ section.settings.cta_url }}" class="cart-icon mobile-cart">
      <i class="las la-shopping-cart"></i>
    </a>

  </header>
</div>

<!-- MOBILE MENU DRAWER -->
<div id="header-{{ section.id }}" class="mobile-menu">
  <button class="mobile-menu-close" id="mobile-menu-close-{{ section.id }}" aria-label="Cerrar menú">
    &times;
  </button>
  <nav>
    <a href="{{ section.settings.nav_link_1_url }}">{{ section.settings.nav_link_1_text }}</a>
    <a href="{{ section.settings.nav_link_2_url }}">{{ section.settings.nav_link_2_text }}</a>
    <a href="{{ section.settings.nav_link_3_url }}">{{ section.settings.nav_link_3_text }}</a>
    <a href="{{ section.settings.nav_link_4_url }}">{{ section.settings.nav_link_4_text }}</a>
    <a href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
  </nav>
</div>

<div id="header-{{ section.id }}" class="mobile-menu-overlay"></div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';

    // SCROLL BEHAVIOR - EXACTO B3TTER
    let lastScroll = 0;

    function handleScroll() {
      const currentScroll = window.pageYOffset;

      if (currentScroll > 20) {
        document.body.classList.add('scrolled');
      } else {
        document.body.classList.remove('scrolled');
      }

      lastScroll = currentScroll;
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll(); // Initial call

    // MOBILE MENU
    const toggleBtn = document.getElementById('mobile-menu-toggle-' + sectionId);
    const closeBtn = document.getElementById('mobile-menu-close-' + sectionId);
    const overlay = document.querySelector('#header-' + sectionId + ' .mobile-menu-overlay');
    const menuLinks = document.querySelectorAll('#header-' + sectionId + ' .mobile-menu a');

    function openMenu() {
      document.body.classList.add('mobile-menu-open');
    }

    function closeMenu() {
      document.body.classList.remove('mobile-menu-open');
    }

    if (toggleBtn) {
      toggleBtn.addEventListener('click', openMenu);
    }

    if (closeBtn) {
      closeBtn.addEventListener('click', closeMenu);
    }

    if (overlay) {
      overlay.addEventListener('click', closeMenu);
    }

    menuLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // SMOOTH SCROLL
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href === '#' || href === '') return;

        const target = document.querySelector(href);
        if (!target) return;

        e.preventDefault();

        const headerHeight = 94;
        const targetPosition = target.getBoundingClientRect().top + window.pageYOffset;
        const offsetPosition = targetPosition - headerHeight - 20;

        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });

        if (history.pushState) {
          history.pushState(null, null, href);
        }
      });
    });

  })();
</script>
