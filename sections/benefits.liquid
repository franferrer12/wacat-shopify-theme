{% schema %}
{
  "name": "Benefits B3TTER",
  "settings": [],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Line Awesome class)",
          "default": "la-tint"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Benefit Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Benefit description"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* Benefits EXACTO B3TTER FOODS */
  #benefits-{{ section.id }} {
    padding: 28px 32px 36px 32px; /* Desktop padding EXACTO */
    background: #ffffff;
  }

  #benefits-{{ section.id }} .benefits-container {
    max-width: 120rem; /* 1200px EXACTO */
    margin: 0 auto;
  }

  #benefits-{{ section.id }} .benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columnas EXACTO B3TTER */
    gap: 40px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  #benefits-{{ section.id }} .benefit-item {
    text-align: center;
  }

  #benefits-{{ section.id }} .benefit-icon {
    font-size: 48px;
    color: #121212;
    margin-bottom: 20px;
  }

  #benefits-{{ section.id }} .benefit-title {
    font-family: Assistant, sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: #121212;
    margin: 0 0 12px 0;
    line-height: 1.2;
  }

  #benefits-{{ section.id }} .benefit-description {
    font-family: Assistant, sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    #benefits-{{ section.id }} {
      padding: 21px 16px 27px 16px; /* Mobile padding EXACTO */
    }

    #benefits-{{ section.id }} .benefits-grid {
      grid-template-columns: 1fr; /* 1 columna mobile */
      gap: 32px;
    }

    #benefits-{{ section.id }} .benefit-icon {
      font-size: 40px;
    }

    #benefits-{{ section.id }} .benefit-title {
      font-size: 18px;
    }

    #benefits-{{ section.id }} .benefit-description {
      font-size: 15px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    #benefits-{{ section.id }} .benefits-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 columnas tablet */
    }
  }
</style>

<section id="benefits-{{ section.id }}">
  <div class="benefits-container">
    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-item">
          <div class="benefit-icon">
            <i class="las {{ block.settings.icon }}"></i>
          </div>
          <h3 class="benefit-title">{{ block.settings.title }}</h3>
          <p class="benefit-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
