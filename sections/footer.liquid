{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "WACAT"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "Hidratación natural para gatos.\nSalud renal y vitalidad."
    },
    {
      "type": "text",
      "id": "links_title",
      "label": "Links Section Title",
      "default": "Enlaces"
    },
    {
      "type": "text",
      "id": "link_1_text",
      "label": "Link 1 Text",
      "default": "Beneficios"
    },
    {
      "type": "text",
      "id": "link_1_url",
      "label": "Link 1 URL",
      "default": "#beneficios"
    },
    {
      "type": "text",
      "id": "link_2_text",
      "label": "Link 2 Text",
      "default": "Cómo Funciona"
    },
    {
      "type": "text",
      "id": "link_2_url",
      "label": "Link 2 URL",
      "default": "#como-funciona"
    },
    {
      "type": "text",
      "id": "link_3_text",
      "label": "Link 3 Text",
      "default": "Testimonios"
    },
    {
      "type": "text",
      "id": "link_3_url",
      "label": "Link 3 URL",
      "default": "#testimonios"
    },
    {
      "type": "text",
      "id": "link_4_text",
      "label": "Link 4 Text",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "link_4_url",
      "label": "Link 4 URL",
      "default": "#faq"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Section Title",
      "default": "Contacto"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wacat.com"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Todos los derechos reservados."
    }
  ]
}
{% endschema %}

<style>
  #footer-{{ section.id }} {
    background-color: #121212;
    color: #ffffff;
    font-family: Assistant, sans-serif;
    padding: 48px 21px;
  }

  #footer-{{ section.id }} .footer-container {
    max-width: 120rem;
    margin-left: auto;
    margin-right: auto;
  }

  #footer-{{ section.id }} .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    #footer-{{ section.id }} {
      padding: 48px 28px;
    }

    #footer-{{ section.id }} .footer-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 48px;
    }
  }

  @media (min-width: 1024px) {
    #footer-{{ section.id }} {
      padding: 48px 36px;
    }
  }

  #footer-{{ section.id }} .footer-column-title {
    font-size: 18px;
    font-weight: 400;
    margin: 0 0 24px 0;
    color: #ffffff;
  }

  #footer-{{ section.id }} .footer-brand-description {
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    line-height: 1.6;
    margin: 0;
    white-space: pre-line;
  }

  #footer-{{ section.id }} .footer-links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  #footer-{{ section.id }} .footer-link {
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  #footer-{{ section.id }} .footer-link:hover {
    color: #ffffff;
  }

  #footer-{{ section.id }} .footer-email {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  #footer-{{ section.id }} .footer-email:hover {
    color: #ffffff;
  }

  #footer-{{ section.id }} .footer-bottom {
    padding-top: 32px;
    border-top: 1px solid rgba(124, 124, 124, 0.2);
    text-align: center;
  }

  #footer-{{ section.id }} .footer-copyright {
    font-size: 14px;
    font-weight: 400;
    color: #7C7C7C;
    margin: 0;
  }
</style>

<footer id="footer-{{ section.id }}">
  <div class="footer-container">
    <div class="footer-grid">
      <div>
        <h3 class="footer-column-title">{{ section.settings.brand_name }}</h3>
        <p class="footer-brand-description">
          {{ section.settings.brand_description }}
        </p>
      </div>

      <div>
        <h3 class="footer-column-title">{{ section.settings.links_title }}</h3>
        <nav class="footer-links">
          <a href="{{ section.settings.link_1_url }}" class="footer-link">{{ section.settings.link_1_text }}</a>
          <a href="{{ section.settings.link_2_url }}" class="footer-link">{{ section.settings.link_2_text }}</a>
          <a href="{{ section.settings.link_3_url }}" class="footer-link">{{ section.settings.link_3_text }}</a>
          <a href="{{ section.settings.link_4_url }}" class="footer-link">{{ section.settings.link_4_text }}</a>
        </nav>
      </div>

      <div>
        <h3 class="footer-column-title">{{ section.settings.contact_title }}</h3>
        <a href="mailto:{{ section.settings.email }}" class="footer-email">
          <i class="las la-envelope"></i>
          {{ section.settings.email }}
        </a>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        © {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
    </div>
  </div>
</footer>
