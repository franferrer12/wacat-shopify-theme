{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@wacat.com"
    }
  ]
}
{% endschema %}

<footer class="bg-wacat-navy text-white section-spacing">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Brand -->
      <div class="space-y-6">
        <h3 class="text-2xl font-bold tracking-tight">WACAT</h3>
        <p class="text-white/70 font-light leading-relaxed tracking-tight">
          Hidratación natural para gatos.<br>
          Salud renal y vitalidad.
        </p>
      </div>

      <!-- Links -->
      <div class="space-y-6">
        <h4 class="text-lg font-semibold tracking-tight">Enlaces</h4>
        <nav class="flex flex-col gap-3">
          <a href="#beneficios" class="text-white/70 hover:text-white transition-colors font-light tracking-tight">Beneficios</a>
          <a href="#como-funciona" class="text-white/70 hover:text-white transition-colors font-light tracking-tight">Cómo Funciona</a>
          <a href="#testimonios" class="text-white/70 hover:text-white transition-colors font-light tracking-tight">Testimonios</a>
          <a href="#faq" class="text-white/70 hover:text-white transition-colors font-light tracking-tight">FAQ</a>
        </nav>
      </div>

      <!-- Contact -->
      <div class="space-y-6">
        <h4 class="text-lg font-semibold tracking-tight">Contacto</h4>
        <div class="space-y-3">
          <a href="mailto:{{ section.settings.email }}" class="flex items-center gap-3 text-white/70 hover:text-white transition-colors font-light tracking-tight">
            <i class="las la-envelope text-xl"></i>
            {{ section.settings.email }}
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-white/20 text-center">
      <p class="text-white/60 text-sm font-light tracking-tight">
        © {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
