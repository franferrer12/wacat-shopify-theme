{% schema %}
{
  "name": "Statistics",
  "settings": [
    {
      "type": "text",
      "id": "stat_1_number",
      "label": "Stat 1 Number",
      "default": "70"
    },
    {
      "type": "text",
      "id": "stat_1_unit",
      "label": "Stat 1 Unit",
      "default": "%"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Stat 1 Label",
      "default": "Gatos deshidratados"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "label": "Stat 2 Number",
      "default": "30"
    },
    {
      "type": "text",
      "id": "stat_2_unit",
      "label": "Stat 2 Unit",
      "default": "%"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Stat 2 Label",
      "default": "Problemas renales"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "label": "Stat 3 Number",
      "default": "3"
    },
    {
      "type": "text",
      "id": "stat_3_unit",
      "label": "Stat 3 Unit",
      "default": "×"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Stat 3 Label",
      "default": "Más hidratación"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior (px)",
      "min": 0,
      "max": 400,
      "step": 8,
      "default": 96,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Espaciado izquierdo (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Espaciado derecho (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Espaciado Interno"
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "Separación entre elementos (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64,
      "unit": "px",
      "info": "Controla el espacio entre elementos principales de la sección"
    }
  ]
}
{% endschema %}

<section id="estadisticas" class="bg-white" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; padding-left: {{ section.settings.padding_left }}px; padding-right: {{ section.settings.padding_right }}px;">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3" style="gap: {{ section.settings.content_gap }}px;">
      <!-- Stat 1 -->
      <div class="text-center">
        <div class="stat-number text-7xl md:text-8xl font-extralight text-wacat-navy/30 mb-6 leading-none" data-target="{{ section.settings.stat_1_number }}" data-unit="{{ section.settings.stat_1_unit }}">
          {{ section.settings.stat_1_number }}{{ section.settings.stat_1_unit }}
        </div>
        <p class="caption text-wacat-navy/50">
          {{ section.settings.stat_1_label }}
        </p>
      </div>

      <!-- Stat 2 -->
      <div class="text-center">
        <div class="stat-number text-7xl md:text-8xl font-extralight text-wacat-navy/30 mb-6 leading-none" data-target="{{ section.settings.stat_2_number }}" data-unit="{{ section.settings.stat_2_unit }}">
          {{ section.settings.stat_2_number }}{{ section.settings.stat_2_unit }}
        </div>
        <p class="caption text-wacat-navy/50">
          {{ section.settings.stat_2_label }}
        </p>
      </div>

      <!-- Stat 3 - Featured -->
      <div class="text-center">
        <div class="stat-number text-7xl md:text-8xl font-extralight text-wacat-navy mb-6 leading-none" data-target="{{ section.settings.stat_3_number }}" data-unit="{{ section.settings.stat_3_unit }}">
          {{ section.settings.stat_3_number }}{{ section.settings.stat_3_unit }}
        </div>
        <p class="caption text-wacat-navy">
          {{ section.settings.stat_3_label }}
        </p>
      </div>
    </div>
  </div>
</section>
